<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/profilepix"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:id="@+id/etName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:drawableLeft="@drawable/profilevectoer"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/et_shape"
        app:layout_constraintTop_toBottomOf="@id/ivProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter you Email"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/et_shape"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your Phone number"
        android:textStyle="bold"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
        android:background="@drawable/et_shape"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/etAdress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your Adress "
        android:inputType="text"
        android:background="@drawable/et_shape"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/etAdress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        />







</androidx.constraintlayout.widget.ConstraintLayout>